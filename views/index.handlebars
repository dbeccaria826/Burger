<div class="row">
    <div class="col s6">
      <div class="card-panel white">
          <h4 class="blue-text">Uneaten Burgers</h4>
        </div>
     <ul class="collection">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
     </ul>
    </div>
     
      <div class="col s6">
        <div class="card-panel white">
          <h4 class="blue-text">Eaten Burgers</h4>
        </div>
        <ul class="collection">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
        </ul>
      </div>
   
    
      <div class="row">
        <form class="create-form col s12">
          <div class="row">
            <div class="input-field col s12">
              <textarea id="create-burger" name="burger-name" class="materialize-textarea"></textarea>
              <label for="textarea1" name="burger-name">Create Burger</label>
            </div>
          </div>
          <button type="submit" class="btn waves-effect black">Add Burger</button>
        </form>
      </div>
     </div><!--End container-->
  </div>
    
  
          


  
  

  
