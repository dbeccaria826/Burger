<div class="row">
  <div class="card-panel background-card">
    <div class="card-content left-align white-text light-3">
      <h2>Eat The Burger</h2>
     
     
    </div>
  </div>
</div>
  <div class="row">
    <div class="col s6">
      <div class="card-panel background-card animate-one">
          <h4 class="white-text" style="background: black;">Uneaten Burgers</h4>
        </div>
     <ul class="collection">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
     </ul>
    </div>
     
      <div class="col s6">
        <div class="card-panel background-card animate-two">
          <h4  style="background: black;" class="white-text">Eaten Burgers</h4>
        </div>
        <ul class="collection">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
        </ul>
      </div>
   </div>
    
      <div class="row">
        <form style="margin:auto; display:block"class="create-form col s12">
          <div class="row">
            <div class="input-field col s12">
              <input style="width: 60%;" type="text" id="create-burger" name="burger-name" class="materialize-input"></input>
              <label for="textarea1" name="burger-name">Create Burger</label>
            </div>
          </div>
          <button type="submit" class="btn waves-effect pulse black">Add Burger</button>
        </form>
      </div>
     
  
  
  
    
  
          


  
  

  
